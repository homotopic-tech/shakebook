<html>
  {{>head}}
  <body>
    {{>header}}
    <div class="container-fluid td-outer">
      <div class="td-main">
        <div class="row flex-xl-nowrap">
          {{>sidebar}}
          <main class="col-12 col-md-9 col-xl-8 pl-md-5" role="main">
            <div class="td-content">
              <h1>This post page is called {{{title}}}</h1>
              {{#items}}
              <h2>{{{title}}}</h2>
              <p>
              <small>Posted on {{{pretty-date}}} with tags:
                {{#tag-links}}
                <a href="{{{url}}}">{{{id}}}</a>
                {{/tag-links}}
              </small>
              <p>{{{teaser}}}</p>
              <p><a href={{{url}}}>Read More</a></p>
              </p>
              {{/items}}

            </div>
            <div>
              Pages:
              {{{page-links}}}
            </div>
          </main>
        </div>
      </div>
    </div>
  </body>
</html>
